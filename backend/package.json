{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"engines": {
		"node": ">=20.6.0"
	},
	"scripts": {
		"dev": "node --env-file=.env.development --watch src/server.ts",
		"prod": "node --env-file=.env.production --watch src/server.ts",
		"test": "node --env-file=.env.test --watch src/server.ts",
		"migrate:latest:dev": "cross-env NODE_ENV=development knex migrate:latest",
		"migrate:latest:prod": "cross-env NODE_ENV=production knex migrate:latest",
		"migrate:rollback:dev": "cross-env NODE_ENV=development knex migrate:rollback",
		"migrate:rollback:prod": "cross-env NODE_ENV=development knex migrate:rollback",
		"seed:make": "cross-env NODE_ENV=development knex seed:make",
		"seed:dev": "cross-env NODE_ENV=development knex seed:run",
		"seed:mock": "node --env-file=.env.development seeds/mock/mock.ts",
		"seed:prod": "cross-env NODE_ENV=production knex seed:run",
		"pm2prod": "cross-env NODE_ENV=development node --watch src/server.ts",
		"vitest": "npx vitest run",
		"test:watch": "npx vitest",
		"test:coverage": "npx vitest run --coverage",
		"test:ui": "npx vitest --ui"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@faker-js/faker": "^9.8.0",
		"@types/node": "^24.2.1",
		"@vitest/coverage-v8": "^3.1.2",
		"@vitest/ui": "^3.1.2",
		"cross-env": "^7.0.3",
		"pino-pretty": "^13.0.0",
		"supertest": "^7.1.0",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.1.0",
		"@fastify/helmet": "^13.0.1",
		"bcryptjs": "^3.0.2",
		"better-sqlite3": "^12.2.0",
		"dotenv": "^16.5.0",
		"fastify": "^5.3.2",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"ms": "^2.1.3",
		"mysql2": "^3.14.0",
		"sql-formatter": "^15.6.6",
		"zod": "^3.24.3"
	}
}
